{
    "name": "TrackHawk",
    "description": "Find out ways you are being tracked",
    "version": "1.0",
    "manifest_version": 3,
    "background": {
      "service_worker": "background.js"
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content.js"]
      }
    ],
    "permissions": [
      "tabs",
      "storage",
      "webRequest",
      "cookies",
      "scripting"
    ],
    "host_permissions": [
    "<all_urls>"
    ],
    "action": {
      "default_popup": "hello.html",
      "default_icon": "hello_extensions.png"
    }
  }
  